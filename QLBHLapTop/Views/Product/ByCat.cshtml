@using QLBHLapTop.Models

@model List<Product>

@section view_title{
    Danh sách sản phẩm
}

@section css{
    <style type="text/css">
        .caption-lg-black {
            font-weight: bold;
            font-size: 12pt;
            color: black;
        }

        .caption-lg-red {
            font-weight: bold;
            font-size: 12pt;
            color: red;
        }
    </style>
}

@if (Model.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            Không có sản phẩm nào.
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (Product pro in Model)
        {
            <div class="col-md-6 col-sm-8">
                <div class="thumbnail">
                    <img src="~/imgs/sp/@pro.ProID/main_thump.jpg" alt="@pro.ProName" title="@pro.ProName">
                    <span class="caption-lg-black">@pro.ProName</span><br />
                    <span class="caption-lg-red">@string.Format("{0:N0}", pro.Price) VND</span><br />
                    Số lượng: @pro.Quantity<br />
                    <a href="#" class="btn btn-primary" role="button">Chi tiết</a>
                    <a href="#" class="btn btn-success" role="button">
                        <i class="fa fa-list-ul"></i>
                        Đặt hàng
                    </a>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <nav>
                <ul class="pagination">
                    <li class="disabled">
                        <a href="?curPage=@ViewBag.PrevPage" aria-label="Previous">
                            <span aria-hidden="true"><<</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.Pages; i++)
                    {
                        <li @if (i == ViewBag.CurPage) { <text> class="active"</text> }>
                            <a href="?curPage=@i">@i</a>
                        </li>
                    }
                    <li>
                        <a href="?curPage=@ViewBag.NextPage" aria-label="Next">
                            <span aria-hidden="true">>></span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}


